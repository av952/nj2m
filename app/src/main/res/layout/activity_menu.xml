<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mochagrunge"
    tools:context="memo.game.avxc.memorizapp.Menu"
    android:weightSum="2"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre_app"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"
    android:layout_margin="10dp"
    android:gravity="center"

    >
        <Button
            android:layout_width="@dimen/tam_botones"
            android:layout_height="@dimen/tam_botones_height"
            android:layout_gravity="center"
            android:text="FACIL"
            android:textSize="20sp"
            android:layout_weight="0"
            android:id="@+id/btn_facil"
            android:background="@drawable/btn_easy"
            android:layout_marginRight="10dp"

            />
        <Button
            android:layout_width="@dimen/tam_botones"
            android:layout_height="@dimen/tam_botones_height"
            android:layout_gravity="center"
            android:text="MEDIO"
            android:textSize="20sp"
            android:layout_weight="0"
            android:id="@+id/btn_medio"
            android:background="@drawable/btn_med"
            android:layout_marginRight="10dp"

            />

    <Button
        android:layout_width="@dimen/tam_botones"
        android:layout_height="@dimen/tam_botones_height"
        android:layout_gravity="center"
        android:text="DIFICIL"
        android:textSize="20sp"
        android:layout_weight="0"
        android:background="@drawable/btn_hard"


        android:id="@+id/btn_difiil" />

</LinearLayout>
    </ScrollView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="jugar"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_jugar"
        android:visibility="invisible"
        />

</LinearLayout>
