<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mochagrunge"
    tools:context="memo.game.avxc.memorizapp.Menu"
    android:weightSum="2"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="@string/nombre_app"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/tam_librero_arriba"
        android:src="@drawable/librero02"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center"

    >
        <Button
            android:layout_width="@dimen/tam_botones"
            android:layout_height="@dimen/tam_botones_height"
            android:layout_gravity="center"
            android:text="@string/facil"
            android:textSize="20sp"
            android:layout_weight="0"
            android:id="@+id/btn_facil"
            android:background="@drawable/btn_easy"
            android:layout_marginRight="10dp"

            />
        <Button
            android:layout_width="@dimen/tam_botones"
            android:layout_height="@dimen/tam_botones_height"
            android:layout_gravity="center"
            android:text="@string/medio"
            android:textSize="20sp"
            android:layout_weight="0"
            android:id="@+id/btn_medio"
            android:background="@drawable/btn_med"
            android:layout_marginRight="10dp"

            />

    <Button
        android:layout_width="@dimen/tam_botones"
        android:layout_height="@dimen/tam_botones_height"
        android:layout_gravity="center"
        android:text="@string/dificil"
        android:textSize="20sp"
        android:layout_weight="0"
        android:background="@drawable/btn_hard"
        android:id="@+id/btn_difiil" />

</LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/tam_librero_medio"
        android:src="@drawable/librero01"

        />

    <Button
        android:layout_width="@dimen/tam_btn_play_width"
        android:layout_height="@dimen/tam_btn_play_height"
        android:layout_gravity="center"
        android:text="jugar"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_jugar"
        android:visibility="visible"
        android:background="@drawable/libro_abierto"
        />

</LinearLayout>
